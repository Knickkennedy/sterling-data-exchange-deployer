apiVersion: v1
kind: ConfigMap
metadata:
  name: mqsc-ini-example
  namespace: "{{ mq_namespace }}"
data:
  example1.mqsc: |
    DEFINE QLOCAL('DEV.QUEUE.1') REPLACE
    DEFINE QLOCAL('DEV.QUEUE.2') REPLACE
    DEFINE CHANNEL('DEV.CHANNEL.SVRCONN') CHLTYPE(SVRCONN) TRPTYPE(TCP) REPLACE
    DEFINE AUTHINFO('COMPATMODE') AUTHTYPE(IDPWOS) CHCKCLNT(OPTIONAL) CHCKLOCL(OPTIONAL) ADOPTCTX(YES) REPLACE
    ALTER QMGR CONNAUTH('COMPATMODE')
    SET AUTHREC PRINCIPAL('app') OBJTYPE(QMGR) AUTHADD(CONNECT,INQ)
    SET AUTHREC PROFILE('DEV.QUEUE.1') PRINCIPAL('app') OBJTYPE(QUEUE) AUTHADD(BROWSE,GET,INQ,PUT)
    SET CHLAUTH('DEV.CHANNEL.SVRCONN') TYPE(USERMAP) CLNTUSER('app') ADDRESS('*') USERSRC(CHANNEL)
    REFRESH SECURITY TYPE(CONNAUTH)
  example2.mqsc: |
    DEFINE QLOCAL('DEV.DEAD.LETTER.QUEUE') REPLACE
  example.ini: |
    Channels:
       MQIBindType=FASTPATH
    Service:
      Name=AuthorizationService
      EntryPoints=14
      SecurityPolicy=UserExternal