apiVersion: mq.ibm.com/v1beta1
kind: QueueManager
metadata:
  name: "{{ mq_crd_name }}"
  namespace: "{{ mq_namespace }}"
spec:
  license:
    accept: true
    license: L-HYGL-6STWD6
    use: Development
  queueManager:
    mqsc:
    - configMap:
        name: mqsc-ini-example
        items:
        - example1.mqsc
        - example2.mqsc
    ini:
    - configMap:
        name: mqsc-ini-example
        items:
        - example.ini
    availability:
      type: SingleInstance
    storage:
      defaultClass: "{{ file_storage_class }}"
      queueManager:
        class: "{{ file_storage_class }}"
        deleteClaim: true
        size: "{{ mq_storage_size }}"
        type: persistent-claim
  template:
    pod:
      containers:
        - env:
            - name: MQ_DEV
              value: "true"
            - name: MQ_CONNAUTH_USE_HTP
              value: "true"
            - name: MQ_ADMIN_PASSWORD
              valueFrom:
                secretKeyRef:
                  name: "{{ mq_deploy_secret }}"
                  key: dev-admin-password
            - name: MQ_APP_PASSWORD
              valueFrom:
                secretKeyRef:
                  name: "{{ mq_deploy_secret }}"
                  key: dev-app-password
          name: qmgr
  version: "{{ mq_operator_version }}"
  web:
    enabled: true
    console:
      authentication:
        provider: manual
      authorization:
        provider: manual
    manualConfig:
      configMap:
        name: mqwebuserconfigmap    
