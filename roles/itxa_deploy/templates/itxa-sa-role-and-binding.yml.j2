---
apiVersion: v1
kind: ServiceAccount
metadata:
  name: "{{ itxa_serviceaccount }}"
  namespace: "{{ itxa_namespace }}"
---
kind: ClusterRole
apiVersion: rbac.authorization.k8s.io/v1
metadata:
  name: ibm-itxa-scc
  labels:
    app.kubernetes.io/name: ibm-itxa-scc
    app.kubernetes.io/instance: ibm-itxa-scc
    app.kubernetes.io/managed-by: IBM
rules:
  - apiGroups:
    - security.openshift.io
    resourceNames:
    - ibm-itxa-scc
    resources:
    - securitycontextconstraints
    verbs:
    - use

---
kind: RoleBinding
apiVersion: rbac.authorization.k8s.io/v1
metadata:
  name: "ibm-itxa-scc"
  namespace: "{{ itxa_namespace }}"
  labels:
    app: "ibm-itxa-scc"
roleRef:
  kind: ClusterRole
  name: "ibm-itxa-scc"
  apiGroup: rbac.authorization.k8s.io
subjects:
  - kind: ServiceAccount
    name: "{{ itxa_serviceaccount }}"
    namespace: {{ itxa_namespace }}
